<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryanharter.phunweather">

  <application android:allowBackup="true"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      android:name=".PhunweatherApp">

    <activity android:name=".activities.WeatherActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".activities.LocationPickerActivity" android:theme="@style/AppTheme.Dialog" />

  </application>

</manifest>
